{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext", "ESNext.AsyncIterable"],
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "newLine": "lf",
    "declaration": true,
    "preserveConstEnums": true,
  },
  "include": [
    "src/*.ts",
    "src/helpers/*.ts",
    "src/utils/*.ts",
  ],
  "excludedFiles": ["node_modules", "dist", "__tests__"],
  "ts-node": {
    "swc": true,
    "esm": true,
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["esnext", "ESNext.AsyncIterable"],
      "strict": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "baseUrl": ".",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "newLine": "lf",
      "declaration": true,
      "preserveConstEnums": true,
    },
  },
}
